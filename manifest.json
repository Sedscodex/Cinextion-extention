{
  "manifest_version": 3,
  "name": "Movie Suggester",
  "version": "1.0",
  "description": "Get movie suggestions and recommendations instantly.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "https://api.themoviedb.org/"
  ]
}
